<h3>Categorias: </h3>
<hr>
{{#each categorias}}
    <div class="card mt-2">
        <div class="card-body">
            <h3>{{nome}}</h3>
            <p>{{slug}}</p>
            <a href="/categorias/{{slug}}"><button class="btn btn-success">Ver postagens</button></a>
        </div>
    </div>
{{else}}
    <h5>Nenhuma categoria criada</h5>
{{/each}}