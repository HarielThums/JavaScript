{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}

<h3>Nova Categoria: </h3>
<div class="card">
    <div class="card-body">
    <form action="/admin/categorias/nova" method="POST">
    
    <label for="nome">Nome: </label>
    <input type="text" name="nome" id="nome" placeholder="Nome da categoria" class="form-control" required>
    <label for="slug" class="mt-2">Slug: </label>
    <input type="text" name="slug" id="slug" placeholder="Slug da categoria" class="form-control " required>
    <button type="submit" class="btn btn-success mt-4">Criar categoria</button>

    </form>
    </div>
</div>

{{!-- Script para alerta de erros --}}
<script>
    let alerta = document.getElementsByClassName('alert')[0]

    if(alerta) {
        setTimeout(() => {
            alerta.style.display = 'none';
        }, 3000)
    }
</script>