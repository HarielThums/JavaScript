<div class="card">
    <div class="card-body">
        <h4>Nova postagem: </h4>
        <form action="">
            <label for="titulo">Título: </label>
            <input type="text" name="titulo" class="form-control">
            <label for="">Slug: </label>
            <input type="text" name="slug" class="form-control">
            <label for="descrição">Descrição: </label>
            <input type="text" name="descrição" class="form-control">
            <label for="conteudo">Conteúdo: </label>
            <textarea name="conteudo" id="" cols="30" rows="10" class="form-control"></textarea>
            <label for="categoria" class="mt-4">Categoria: </label>
            <select name="categoria" class="form-select form-select-lg mb-3">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar postagem </button>
        </form>
    </div>
</div>